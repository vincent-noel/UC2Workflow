Bootstrap: docker
From: ubuntu
Stage: build

%environment
    export PATH="/usr/local/bin:/usr/local/bin/MaBoSS/:/usr/local/bin/MaBoSS/MaBoSS_analysis:$PATH"

%post
    DEBIAN_FRONTEND=noninteractive apt-get update -y
    DEBIAN_FRONTEND=noninteractive apt-get install -y r-base default-jre

%files
    assets/MaBoSS /usr/local/bin

%runscript
    exec /bin/bash "$@"

